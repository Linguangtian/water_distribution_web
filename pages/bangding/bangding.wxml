<view class="page">
    <include src="/components/common/common"></include>
    <include src="/components/header/header"></include>
    <view class="body after-navber">
        <block wx:if="{{binding}}">
            <view class="binding_pic">
                <image src="{{__wxapp_img.store.binding_pic.url}}" style="height:100%;width:288rpx;"></image>
            </view>
            <view class="binding_num">
                <view clsss="fs-b" style="display: flex;justify-content: center;margin-bottom:16rpx;">已绑定手机</view>
                <view class="fs-b" style="display: flex;justify-content: center;">{{binding_num}}</view>
            </view>
            <button bindtap="renewal" class="binding-footer">更换绑定</button>
        </block>
        <block wx:else>
            <view class="binding-header ">
                <view class="empower" style="float:left;">
                    <text bindtap="gainPhone" class="binding-phone {{gainPhone?'gainPhone':''}}">点击授权</text>
                </view>
                <view class="empower" style="float:right;" wx:if="{{status}}">
                    <text bindtap="handPhone" class="binding-phone {{handPhone?'handPhone':''}}">手动授权</text>
                </view>
            </view>
            <view style="height:8rpx;background:#f7f7f7;"></view>
            <view class="binding-main flex-row" wx:if="{{gainPhone}}">
                <view class="flex-grow-1">
                    <input bindinput="PhoneInput" class="fs-b binding-btn {{PhoneNumber?'active':''}}" disabled="true" maxlength="11" name="phone" placeholder="授权手机号" type="number" value="{{PhoneNumber}}"></input>
                </view>
                <view class="glex-grow-0">
                    <button bindgetphonenumber="getPhoneNumber" class="fs-b binding-btn" hoverClass="none" openType="getPhoneNumber" style="color:#ff4544;border-left:1rpx solid #e2e2e2;padding-left:50rpx;white-space:nowrap">点击授权</button>
                </view>
            </view>
            <block wx:if="{{status}}">
                <view class="binding-main2" wx:if="{{handPhone}}">
                    <view style="height:100rpx;border-bottom:1rpx solid #e2e2e2;">
                        <input bindinput="HandPhoneInput" class="fs-b binding-btn {{PhoneNumber?'active':''}}" name="phone" placeholder="输入手机号" style="float:left;hieght:100rpx;" type="number"></input>
                    </view>
                    <view class="flex-row" style="height:100rpx;">
                        <view class="flex-grow-1">
                            <input bindinput="CodeInput" class="fs-b binding-btn {{PhoneNumber?'active':''}}" maxlength="6" name="code" placeholder="输入验证码" type="number"></input>
                        </view>
                        <view class="flex-grow-1">
                            <view class="fs-b binding-btn" style="color:#ff4544;border-left:1rpx solid #e2e2e2;padding-left:50rpx;" wx:if="{{timer}}">{{second}} S</view>
                            <view bindtap="nextStep" class="fs-b binding-btn" style="color:#ff4544;border-left:1rpx solid #e2e2e2;padding-left:50rpx;white-space:nowrap" wx:else>获取验证码</view>
                        </view>
                    </view>
                </view>
            </block>
            <button bindtap="onSubmit" class="binding-footer" wx:if="{{handPhone}}">确认</button>
        </block>
    </view>
    <include src="/components/footer/footer"></include>
</view>
